{
    "name": "glynnforrest/reform",
    "description": "Forms using HttpFoundation that render and validate with ease.",
    "license": "MIT",
    "authors": [
        {
            "name": "Glynn Forrest",
            "email": "me@glynnforrest.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "symfony/http-foundation": "2.4.*"
    },
    "require-dev": {
        "symfony/event-dispatcher": "2.4.*",
        "glynnforrest/blockade": "0.1.*"
    },
    "suggest": {
        "symfony/event-dispatcher": "Allow the sending of form events",
        "glynnforrest/blockade": "Allow automatic csrf protection"
    },
    "autoload": {
        "psr-4": {
            "Reform\\": "src/Reform"
        }
    }
}
